{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "esm/**", "lib/**", "types/**"]
    },
    "build:types": {
      "dependsOn": ["^build:types"],
      "outputs": ["types/**", "dist/**"]
    },
    "build:release": {
      "dependsOn": ["^build:release"],
      "outputs": ["dist/**", "esm/**", "lib/**", "types/**"]
    },
    "build:app": {
      "dependsOn": ["^build:app", "build", "build:types"],
      "outputs": ["dist/**"]
    },
    "build:watch": {
      "cache": false,
      "dependsOn": ["build:types"]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^start"]
    },
    "preview": {
      "dependsOn": ["build:app"]
    }
  }
}
